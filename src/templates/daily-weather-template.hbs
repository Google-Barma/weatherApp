{{#each this}}
<div class="swiper-slide">
    <div class="swiper-slider__container">
        <div class="daily-weather__title-block">
            <h3 class="daily-weather__title">{{name}}</h3>
            <div class="daily-weather__date-block">
                <p class="daily-weather__date">{{dt}}</p>
                <p class="daily-weather__temp">Днем: <span class="daily-weather__temp--num">{{temp.day}}&#176;</span>
                </p>
                {{!-- <p class="daily-weather__time">{{time}}</p> --}}
            </div>

        </div>
        <img src={{weatherDescriptionIcon}} alt="weather image" class="daily-weather__image" width="100">

        <div class="daily-weather__text-container">

            <p class="daily-weather__description">{{weatherDescription}}</p>
            <p class="daily-weather__max-temp">Макс. темп: {{temp.max}}&#176;</p>
            <p class="daily-weather__max-temp">Мин. темп: {{temp.min}}&#176;</p>

        </div>
    </div>

</div>

{{/each}}